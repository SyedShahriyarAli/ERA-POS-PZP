@inject DialogService DialogService

<RadzenTemplateForm TItem="string" Data="@comment" Submit="@AddComment">
    <RadzenStack>
        <RadzenRow>
            <RadzenColumn Size="12">
                <RadzenTextBox Placeholder="Comment" @bind-value="@comment" style="width:100%" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow JustifyContent="JustifyContent.End">
            <RadzenButton Icon="key" Text="Proceed" ButtonStyle="ButtonStyle.Primary" Variant="Variant.Flat" ButtonType="ButtonType.Submit"></RadzenButton>
        </RadzenRow>
    </RadzenStack>
</RadzenTemplateForm>

@code {
    string comment = "";

    void AddComment()
    {
        DialogService.Close(comment);
    }
}